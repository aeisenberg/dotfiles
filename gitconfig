[alias]
  a = add --all
  pr = pull --rebase
  st = status
  c = commit
  ci = commit
  b = branch
  co = checkout
  df = diff
  dc = diff --cached
  feo = fetch origin
  feu = fetch upstream
  lg = log -p
  l = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ci) %C(bold blue)<%an>%Creset'
  ls = ls-files
  reom = reset --hard origin/main
  reou = reset --hard upstream/main
  com = checkout main
  praise = blame
  cp = cherry-pick
  cpa = cherry-pick --abort
  cpc = cherry-pick --continue
  ca = commit --amend
  tw = tag -f work
  pm = push origin main
  pmv = push origin main --no-verify
  sub = submodule update

  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard

[push]
	default = current

[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eola
  filemode = false
  bare = false
  logallrefupdates = true
[gerrit]
  createchangeid = true
[difftool "sourcetree"]
