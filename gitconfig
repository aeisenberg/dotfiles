[user]
  name = Andrew Eisenberg
  email = aeisenberg@github.com
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[color]
  ui = true
[color "diff"]
  whitespace = red reverse

[alias]
  pr = pull --rebase
  st = status
  c = commit
  ci = commit
  b = branch
  co = checkout
  df = diff
  dc = diff --cached
  feo = fetch origin
  feu = fetch upstream
  lg = log -p
  l = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ci) %C(bold blue)<%an>%Creset'
  ls = ls-files
  reom = reset --hard origin/main
  reou = reset --hard upstream/main
  com = checkout main
  praise = blame
  cp = cherry-pick
  ca = commit --amend
  tw = tag -f work
  pm = push origin main
  pmv = push origin main --no-verify
  sub = submodule update

  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard

[push]
	default = current

[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eola
  filemode = false
  bare = false
  logallrefupdates = true
[gerrit]
  createchangeid = true
[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[pull]
	rebase = true


[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    features = decorations

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
